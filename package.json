{
  "name": "ts-starter",
  "version": "1.0.0",
  "description": "A basic typescript starter template.",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "scripts": {
    "cz": "czg",
    "dev": "npx nodemon src/index.ts",
    "format": "prettier --write .",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0 && pretty-quick --check",
    "lint:fix": "eslint --fix . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json && pretty-quick",
    "prepare": "husky install"
  },
  "dependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@sa/eslint-config": "workspace:*",
    "@types/node": "^18.11.4",
    "cz-git": "^1.3.11",
    "czg": "^1.3.11",
    "eslint": "^8.25.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.6.4"
  },
  "devDependencies": {
    "@esbuild-kit/cjs-loader": "^2.4.1",
    "@types/node": "^18.11.18",
    "fast-glob": "^3.2.12",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{js,ts,md,json}": "eslint --fix"
  }
}
